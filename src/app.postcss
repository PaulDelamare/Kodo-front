@import '@fontsource-variable/jura';

@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;

*{
    @apply text-base;
}

h2{
    @apply text-2xl font-light text-center
}

h3{
    @apply text-xl font-light text-center
}

.small-wrap {
	@apply w-full max-w-[400px] mx-auto px-4;
}

.note{
    @apply bg-warning-500 rounded-full py-1 px-2
}
